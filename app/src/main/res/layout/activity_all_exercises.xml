<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllExercises">

    <TextView
        android:id="@+id/mess"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Exercises"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mess"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_box"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="45dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Full Body Workout"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 exercises || 15min"
                android:paddingBottom="20dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/full"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner"
                android:text="@string/viewmore"
                android:textColor="@color/button"
                android:textSize="10sp"
                app:backgroundTint="@color/buttonLabel" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:src="@drawable/full" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"        android:background="@drawable/rounded_box">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="45dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Lower Body Workout"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 exercises || 15min"
                android:paddingBottom="20dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/lower"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner"
                android:text="@string/viewmore"
                android:textColor="@color/button"
                android:textSize="10sp"
                app:backgroundTint="@color/buttonLabel" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:src="@drawable/lower" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_box">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="45dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Ab Workout"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 exercises || 15min"
                android:paddingBottom="20dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/ab"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner"
                android:text="@string/viewmore"
                android:textColor="@color/button"
                android:textSize="10sp"
                app:backgroundTint="@color/buttonLabel" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/ab" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_box"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="45dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Upper Body Workout"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 exercises || 15min"
                android:paddingBottom="20dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/upper"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner"
                android:text="@string/viewmore"
                android:textColor="@color/button"
                android:textSize="10sp"
                app:backgroundTint="@color/buttonLabel" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:src="@drawable/upper" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="400dp"
        tools:layout_editor_absoluteY="579dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav"
       />

</androidx.constraintlayout.widget.ConstraintLayout>